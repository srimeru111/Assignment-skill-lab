1.Flight Ticket Booking System
#include <stdio.h>
#include <string.h>

int main() {
    int n, age[20];
    char name[20][50], destination[20][50];

    printf("Enter number of passengers: ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        printf("Passenger %d : ", i + 1);
        scanf(" %s", name[i]); // Read passenger name
        scanf("%d", &age[i]); // Read passenger age
        scanf(" %s", destination[i]); // Read passenger destination
    }

    // Sorting passengers by destination name (A-Z)
    for (int i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            if (strcmp(destination[i], destination[j]) > 0) {
                // Swap destination
                char tempd[50];
                strcpy(tempd, destination[i]);
                strcpy(destination[i], destination[j]);
                strcpy(destination[j], tempd);

                // Swap name
                char tempname[50];
                strcpy(tempname, name[i]);
                strcpy(name[i], name[j]);
                strcpy(name[j], tempname);

                // Swap age
                int temp = age[i];
                age[i] = age[j];
                age[j] = temp;
            }
        }
    }

    printf("\nSorted List (by destination):\n");
    for (int i = 0; i < n; i++) {
        printf("Name: %s\nAge: %d\nDestination: %s\n", name[i], age[i], destination[i]);
    }

    char search[50];
    printf("\nEnter destination to search: ");
    scanf(" %s", search);

    int flag = 0;
    printf("\nPassengers traveling to %s:\n", search);
    for (int i = 0; i < n; i++) {
        if (strcmp(destination[i], search) == 0) {
            printf("%s (Age: %d)\n", name[i], age[i]);
            flag = 1;
        }
    }
    if (!flag)
        printf("None\n");

    return 0;
}
2.DNA Sequence Pattern Finder
#include <stdio.h>
#include <string.h>

// Function to count occurrences of a pattern in the DNA sequence
int search(char DNA[], char search[]) {
    int count = 0;
    int dnalen = strlen(DNA);
    int selen = strlen(search);

    for (int i = 0; i <= dnalen - selen; i++) {
        if (strncmp(&DNA[i], search, selen) == 0) {
            count++;
        }
    }
    return count;
}

int main() {
    char DNA[100];
    char pattern[100];
    int count;

    printf("Enter DNA Sequence: ");
    scanf("%s", DNA);
    printf("Enter pattern to search: ");
    scanf("%s", pattern);

    count = search(DNA, pattern);

    printf("Pattern found %d time(s) in the DNA sequence.\n", count);
    return 0;
}
3.Cricket Scoreboard System
#include <stdio.h>

int main() {
    int a[5];
    int highest, lowest;
    int sum = 0;

    printf("Enter scores of 5 matches: ");
    for (int i = 0; i < 5; i++) {
        scanf("%d", &a[i]);
    }

    highest = a[0];
    lowest = a[0];

    for (int i = 0; i < 5; i++) {
        if (a[i] > highest) {
            highest = a[i];
        }
        if (a[i] < lowest) {
            lowest = a[i];
        }
        sum += a[i];
    }

    float avg = sum / 5.0;

    printf("Highest Score: %d\n", highest);
    printf("Lowest Score: %d\n", lowest);
    printf("Average Score: %.2f\n", avg);

    return 0;
}
2. Book entry 
#include <stdio.h>
#define max 1000
struct Fiction_t{
    char title[250];
    char author[250];
    float price;
};
typedef struct Fiction_t Fiction;
struct Nonfiction_t{
    char title[250];
    char subject[50];
    float price;
};
typedef struct Nonfiction_t Nonfiction;
union BookType_t{
    Fiction fiction;
    Nonfiction nonfiction;
};
typedef union BookType_t BookType;
struct Book_t{                
    int type;
    BookType bookType;
};
typedef struct Book_t Book;
int bookCount;
Book books[max];
void readBooks(){
    printf("Enter number of books:");
    scanf("%d",&bookCount);
    for(int i=0;i<bookCount;i++){
        printf("Enter book type(1-Fiction,2-Non-Fiction):");
        scanf("%d",&books[i].type);
        switch(books[i].type){
            case 1:{
                printf("Enter Fiction Book Details (title,auther,price):");
                scanf("%s%s%f",books[i].bookType.fiction.title,books[i].bookType.fiction.author,&books[i].bookType.fiction.price);
            }break;
            case 2:{
                 printf("Enter Non-Fiction Book Details (title,subject,price):");
                scanf("%s%s%f",books[i].bookType.nonfiction.title,books[i].bookType.nonfiction.subject,&books[i].bookType.nonfiction.price);
            }break;
        }
    }
}
void displayBooks(){
    for(int i=0;i<bookCount;i++){
        switch(books[i].type){
            case 1:{
                printf("Fiction Book:%s\t%s\t%f",books[i].bookType.fiction.title,books[i].bookType.fiction.author,books[i].bookType.fiction.price);
            }break;
            case 2:{
                 printf("Non-Fiction Book:%s\t%s\t%f",books[i].bookType.nonfiction.title,books[i].bookType.nonfiction.subject,books[i].bookType.nonfiction.price);
            }break;
        }
    }
}
int main(){
    readBooks();
    displayBooks();
    return 0;
}
